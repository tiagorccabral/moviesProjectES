<h1 align="center" style="margin: 0.5em">Editar <%= @movie.title %></h1>
<%= form_for(:movie, url: movie_path(@movie), :html => {class: "form-horizontal", role: "form"}, method: :patch) do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Título do filme</label>
      <%= f.text_field :title, autofocus: true, placeholder: 'Título do filme', class: 'form-control', id: 'title' %>
    </div>
    <div class="form-group col-md-6">
      <label>Nome do diretor</label>
      <%= f.text_field :director, placeholder: 'Nome do diretor', class: 'form-control', id: 'director' %>
    </div>
  </div>
  <div class="form-group">
    <label>Descrição do filme</label>
    <%= f.text_area :description, placeholder: 'Descrição do filme', class: 'form-control', id: 'description', rows: 5 %>
  </div>
  <div class="form-group">
    <label>Data de lançamento</label>
    <%= f.date_field :release_date, class: 'form-control', id: 'release_date' %>
  </div>
  <div class="form-row">
    <div class="form-row">
      <div class="col">
        <%= f.submit 'Editar filme', class: 'btn btn-success' %>
        <%= link_to 'Voltar', movies_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>

<% end %>